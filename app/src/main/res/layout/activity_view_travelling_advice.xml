<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewTravellingAdvice">

    <TextView
        android:id="@+id/tvJourneyAdvice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/travelling_text_journey"
        app:layout_constraintBottom_toTopOf="@+id/tvAvoidAdvice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAvoidAdvice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/travelling_text_avoid"
        app:layout_constraintBottom_toTopOf="@+id/tvAgeAdvice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJourneyAdvice" />

    <TextView
        android:id="@+id/tvAgeAdvice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/travelling_text_age"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAvoidAdvice" />
</androidx.constraintlayout.widget.ConstraintLayout>